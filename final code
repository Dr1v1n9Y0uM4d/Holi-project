board = [[" ", " ", " "], [" ", " ", " "], [" ", " ", " "]]
vb = "|"
s = "\t+---+---+---+"

def printboard():
    for row in board:
        print (s)
        print ("\t" + vb + " " + row[0] + " " + vb + " " + row[1] + " " + vb + " " + row[2] + " " + vb)
    print (s)
