board = [[" ", " ", " "], [" ", " ", " "], [" ", " ", " "]]
A = board[0] #row 1
B = board[1] #row 2 
C = board[2] #row 3

sep = "|" #in-btw separators
hline = "\t+---+---+---+" #horizontal separators
#count = 0

def ttt():
    #print(s)
    count = 0
    print("          1   2   3")
    for row in board:
        #print(row)
        print (hline)
        print ("     " + grid[count] + "  " + sep + " " + row[0] + " " + sep + " " + row[1] + " " + sep + " " + row[2] + " " + sep)
        count += 1
    print (hline)
    
ttt()

